<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FragProfile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvhoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hồ sơ của tôi"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/darkgal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


<!--                <ImageView-->
<!--                    android:id="@+id/imgProfile"-->
<!--                    android:layout_width="130dp"-->
<!--                    android:layout_height="130dp"-->
<!--                    android:scaleType="centerCrop"-->

<!--                    tools:src="@tools:sample/avatars" />-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/female_default_image" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Địa chỉ email"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="18sp"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvtenn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvtuoii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuổi"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvTuoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuổi"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGioiTinhhhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvGioiTinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới Tính"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvchieucaooo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chiều cao"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvChieuCao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chiều Cao"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCanNangggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cân nặng hiện tại"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvCanNang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cân Nặng"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCanNangMucTieuuuu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cân nặng mục tiêu"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvCanNangMucTieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cân Nặng Mục Tiêu"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvVanDonggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mức độ vận động"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvVanDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vận Động"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvBmiiiii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉ số khối cơ thể (BMI)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvBmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTdeeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng năng lượng tiêu thụ mỗi ngày (TDEE)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvTdee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TDEE"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvBmrrrrr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tỷ lệ trao đổi chất cơ bản của cơ thể (BMR)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvBmr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BMR"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvLuongNuoccccc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lượng nước cần uống mỗi ngày"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvLuongNuoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lượng Nước"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvCaloriesMucTieuuuuu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories cần ăn mỗi ngày"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvCaloriesMucTieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories Mục Tiêu"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvThoiGianDuKiennnnn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian dự kiến để đạt đến mức cân nặng mục tiêu"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvThoiGianDuKien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời Gian Dự Kiến"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa hồ sơ"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:layout_marginBottom="80dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
