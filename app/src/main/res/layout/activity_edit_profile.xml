<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/darkgal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:background="@color/darkgal"
                    android:drawableRight="@drawable/baseline_arrow_back_24"
                    android:gravity="left"
                    android:text="."
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/textView11dad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Chỉnh sửa hồ sơ"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="16sp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Tên" />

            <EditText
                android:id="@+id/edtTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView11a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Tuổi" />
            <EditText
                android:id="@+id/edtTuoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTen"
                android:hint="Tuổi"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Chiều cao (cm)" />
            <EditText
                android:id="@+id/edtChieuCao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTuoi"
                android:hint="Chiều cao (cm)"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView1123a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Cân nặng (kg)" />
            <EditText
                android:id="@+id/edtCanNang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtChieuCao"
                android:hint="Cân nặng (kg)"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView1123da"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Mục tiêu cân nặng (kg)" />
            <EditText
                android:id="@+id/edtCanNangMucTieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtCanNang"
                android:hint="Cân nặng mục tiêu (kg)"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textVie123w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Giới tính" />
            <RadioGroup
                android:id="@+id/rgGioiTinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtCanNangMucTieu">

                <RadioButton
                    android:id="@+id/btnNam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam" />

                <RadioButton
                    android:id="@+id/btnNu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ" />
            </RadioGroup>

            <TextView
                android:id="@+id/textVie1224123w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Mức độ vận động" />
            <RadioGroup
                android:id="@+id/rgVanDong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rgGioiTinh">

                <RadioButton
                    android:id="@+id/btnItVanDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ít vận động" />

                <RadioButton
                    android:id="@+id/btnVanDongNhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vận động nhẹ" />

                <RadioButton
                    android:id="@+id/btnVanDongVua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vận động vừa" />

                <RadioButton
                    android:id="@+id/btnVanDongNhieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vận động nhiều" />
            </RadioGroup>

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rgVanDong"
                android:text="Chỉnh sửa" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>
